<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>BattleJack Guru - @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link href="/Content/stylesheet.css" rel="stylesheet" />
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-107419789-1', 'auto');
            ga('send', 'pageview');
        </script>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <script>
            nexonFAQ = function(){
                window.open('https://nexonm.helpshift.com/a/battlejack/', "Nexon FAQ", 'width=500px,height=500px');
            }
        </script>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <img style="height:75px;" src="../Images/logo.png" />

                </div>
                <div class="float-right">
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("News", "Index", "Home")</li>
                            <li>@Html.ActionLink("Heroes", "Heroes", "Home")</li>
                            <li>@Html.ActionLink("Quests", "Quests", "Home")</li>
                            <li>@Html.ActionLink("XP Calculator", "XPCalc", "Home")</li>
                            <li><a href="#" onclick="nexonFAQ()">FAQ/Help</a></li>
                            <li><a href="http://battlejackremastered.wikia.com" target="_blank">Wiki</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - BattleJack Guru</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
